.moodPortrait {
    background-color: var(--unity-colors-default-background);
    margin-top: 5px;
    padding: 10px;
    border-radius: 15px;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;    
}

#Mood {
    -unity-font-style: bold;
    font-size: 120%;
}

#SpritePreview {
    padding-top: 40%;
    width: 40%;
    -unity-background-scale-mode: scale-to-fit;
}
