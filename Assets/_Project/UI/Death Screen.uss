:root {
    --fade-duration: 1s;
    -unity-font-definition: var(--death-screen-font);
    font-size: var(--death-screen-base-font_size);
}

#DeathScreen {
    background-color: rgb(0, 0, 0);
    justify-content: center;
    height: 100%;
    width: 100%;
}

#DeathMessage {
    color: rgb(255, 255, 255);
    -unity-text-align: upper-center;
}
